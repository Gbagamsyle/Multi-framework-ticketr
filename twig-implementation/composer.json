{
    "name": "ogaba/twig-implementation",
    "type": "project",
    "description": "Ticket Management System with Twig Implementation",
    "autoload": {
        "psr-4": {
            "Ogaba\\TwigImplementation\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ogaba Silas",
            "email": "gbagamscott@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "twig/twig": "^3.0",
        "nikic/fast-route": "^1.3",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.11"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 777 storage"
        ]
    }
}
