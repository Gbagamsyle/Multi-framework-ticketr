{% extends "base.twig" %}

{% block title %}Sign Up - TicketApp{% endblock %}

{% block content %}
<div class="auth-page">
    <div class="auth-card">
        <div class="auth-logo">
            <a href="/">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 8v8M8 12h8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </a>
        </div>

        <div class="auth-header">
            <h1>Create your account</h1>
            <p>Join us today to start managing your support tickets</p>
        </div>

        {% if error %}
            <div class="auth-alert error" role="alert">
                <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span>{{ error }}</span>
            </div>
        {% endif %}

        <form method="POST" action="/auth/signup" class="auth-form">
            <div class="form-group">
                <label for="name">Full Name</label>
                <div class="input-with-icon">
                    <input type="text" id="name" name="name" required class="with-icon-left" placeholder="John Doe" autofocus>
                    <span class="input-icon left" aria-hidden="true">
                        <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="email">Email address</label>
                <div class="input-with-icon">
                    <input type="email" id="email" name="email" required class="with-icon-left" 
                        placeholder="you@example.com">
                    <span class="input-icon left" aria-hidden="true">
                        <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" 
                                d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                        </svg>
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-with-icon">
                    <input type="password" id="password" name="password" required class="with-icon-left" 
                        placeholder="••••••••" autocomplete="new-password">
                    <span class="input-icon left" aria-hidden="true">
                        <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" 
                                d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                        </svg>
                    </span>
                </div>
            </div>

            <button type="submit" class="btn-submit">Create account</button>

            <div class="auth-footer">
                Already have an account?{' '}
                <a href="/auth/login">Sign in instead</a>
            </div>
        </form>

    <p class="auth-links">
        Already have an account? <a href="/auth/login">Login</a>
    </p>
</div>
{% endblock %}