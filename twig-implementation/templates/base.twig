<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>{% block title %}TicketApp{% endblock %}</title>
    <!-- Core styles -->
    <link rel="stylesheet" href="/css/styles/normalize.css">
    <link rel="stylesheet" href="/css/styles/global.css">
    <link rel="stylesheet" href="/css/styles/animations.css">
    <!-- Component styles -->
    <link rel="stylesheet" href="/css/styles/auth.css">
    <link rel="stylesheet" href="/css/styles/buttons.css">
    <link rel="stylesheet" href="/css/styles/card.css">
    <link rel="stylesheet" href="/css/styles/dashboard.css">
    <link rel="stylesheet" href="/css/styles/components/stats-cards.css">
    <link rel="stylesheet" href="/css/styles/components/modal-form.css">
    <link rel="stylesheet" href="/css/styles/footer.css">
    <link rel="stylesheet" href="/css/styles/forms.css">
    <link rel="stylesheet" href="/css/styles/header.css">
    <link rel="stylesheet" href="/css/styles/landing.css">
    <link rel="stylesheet" href="/css/styles/modal.css">
    <link rel="stylesheet" href="/css/styles/table.css">
    <link rel="stylesheet" href="/css/styles/tickets.css">
    <link rel="stylesheet" href="/css/styles/toast.css">
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="brand">TicketApp</a>
        <nav class="main-nav">
          {% if is_authenticated %}
            <a href="/dashboard">Dashboard</a>
            <a href="/tickets">Tickets</a>
            <a href="/auth/logout" class="btn btn-secondary">Logout</a>
          {% else %}
            <a href="/auth/login">Login</a>
            <a href="/auth/signup" class="btn btn-primary">Get Started</a>
          {% endif %}
        </nav>
      </div>
    </header>

    <main>
      {% block content %}{% endblock %}
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <p>&copy; {{ "now"|date("Y") }} TicketApp. All rights reserved.</p>
          <nav class="footer-nav">
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/privacy">Privacy</a>
            <a href="/terms">Terms</a>
          </nav>
        </div>
      </div>
    </footer>

    <div id="toast-container" class="toast-container"></div>
    <script src="/js/app.js"></script>
    <script src="/js/scroll-reveal.js"></script>
  </body>
</html>
